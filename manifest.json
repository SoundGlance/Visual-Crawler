{
    "manifest_version": 2,
    "name": "VisualCrawler",
    "version": "1.0",
    "description": "Chrome extension to open each of the given urls, take a screenshot, and crawl the attributes of elementFromPoint(x, y)",
   
    "browser_action": {
      "default_icon": "icon.png"
    },

    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": false
    },

    "content_scripts":   [
      {
        "matches":   [
                        "https://opengov.seoul.go.kr/mediahub/11089478",
                        "https://www.byedust.net/02",
                        "http://kfem.or.kr/?p=187396",
                        "https://www.bbc.com/korean/news-43524873",
                        "http://news.jtbc.joins.com/article/article.aspx?news_id=NB11609490"
                     ],
        "js":        [ 
                        "content.js" 
                     ],
        "run_at":    "document_idle"
      }
    ],

    "permissions": [
      "tabs", 
      "activeTab",
      "http://*/",
      "https://*/",
      "storage", 
      "unlimitedStorage"
    ]
  }